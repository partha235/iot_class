# creating a web page
def web_page():
    html="""<html>
    <head><title>IoT class</title><style>body{background-color: rgb(19, 24, 24);}</style>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="refresh"content="1"></head>
    <body>
        <h1 style="color:coral">Priyanka</h1>
        <p style="color:azure">This is a test program made for IoT class of program file test1.mpy </p>
    </body>
</html>"""
    return html

so=socket.socket(socket.AF_INET,socket.SOCK_STREAM) # AF-> Address Family
so.bind(("",80))
so.listen(3)

while True:
  try:
    x.toggle()
    if gc.mem_free() < 102000:
      gc.collect()
    conn, addr = so.accept()
    conn.settimeout(3.0)
    print('Got a connection from %s' % str(addr))
    request = conn.recv(1024)
    conn.settimeout(None)
    request = str(request)
    print('Content = %s' % request)
    response = web_page()
    conn.send('HTTP/1.1 200 OK\n')
    conn.send('Content-Type: text/html\n')
    conn.send('Connection: close\n\n')
    conn.sendall(response)
    conn.close()
    sleep_ms(100)
  except OSError as e:
    conn.close()
    print('Connection closed')